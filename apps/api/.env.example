# ViVi CMO Agent - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Core Configuration
# ===========================================
PORT=3001
NODE_ENV=development
LOG_LEVEL=debug

# ===========================================
# Database (PostgreSQL with pgvector)
# ===========================================
DATABASE_URL=postgresql://vivi:vivi_password@localhost:5432/vivi_cmo_agent

# ===========================================
# Redis (Caching & Queue)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# Object Storage (MinIO/S3)
# ===========================================
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=vivi-media
STORAGE_REGION=us-east-1
STORAGE_USE_SSL=false
STORAGE_FORCE_PATH_STYLE=true

# ===========================================
# OpenAI API
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here

# ===========================================
# Auth0 Authentication
# ===========================================
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.vivi.ai
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# For development/testing, set to 'true' to bypass auth
SKIP_AUTH=true

# ===========================================
# LiteLLM Proxy (Optional)
# ===========================================
LITELLM_URL=http://localhost:4000
LITELLM_MASTER_KEY=litellm_master_key_123

# ===========================================
# Langfuse Observability (Optional)
# ===========================================
LANGFUSE_SECRET_KEY=langfuse_secret_key_123
LANGFUSE_PUBLIC_KEY=langfuse_public_key_123
LANGFUSE_HOST=http://localhost:3000

# ===========================================
# Sentry Error Tracking (Optional)
# ===========================================
SENTRY_DSN=

# ===========================================
# OpenTelemetry Tracing (Optional)
# ===========================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=vivi-cmo-agent

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CORS
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# FFmpeg (for video processing)
# ===========================================
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
